<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="paradas_listado_nombre" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="paradas_listado_cantidades" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
        <!--<item name="android:layout_marginHorizontal">5dp</item>-->
        <!--<item name="android:layout_marginVertical">16dp</item>-->
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <!--<item name="android:shadowColor">#000000</item>
        <item name="android:shadowRadius">2</item>-->
        <item name="android:background">@drawable/borde_listado</item>
    </style>


</resources>
