<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_lista_usuario"
    app:cardBackgroundColor="#CCC"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CCC">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/fondo_blanco">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_margin="10dp"
                android:src="@drawable/usuario_default" />

            <TextView
                android:id="@+id/tvNombre"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="#000"
                android:text="Jorge Rosas"/>

            <Button
                android:id="@+id/btnHabilitar"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_margin="10dp"
                android:background="@drawable/ic_aceptar"/>

            <Button
                android:id="@+id/btnInhabilitar"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_margin="10dp"
                android:background="@drawable/ic_inhabilitar"/>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>