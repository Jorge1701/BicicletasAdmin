<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_lista_usuario"
    app:cardBackgroundColor="#CCC"
    android:layout_gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#CCC">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/fondo_blanco">

            <LinearLayout
                android:id="@+id/cabecera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/usuario_default" />

                    <TextView
                        android:id="@+id/tvNombre"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:layout_marginLeft="4dp" />

                    <ImageView
                        android:id="@+id/imgHabilitado"
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/ic_aceptar"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/imgInhabilitado"
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/ic_inhabilitar"
                        tools:ignore="ContentDescription" />

                    <ProgressBar
                        android:id="@+id/barraProgreso"
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        android:layout_margin="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/msjExpandir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/fondo_msj"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/toque_para_expandir"
                        android:textColor="#FFF"
                        android:textAlignment="center"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/contenido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="15dp"
                android:paddingBottom="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvMensajeCIPasaporte"
                        android:layout_weight="7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textAlignment="viewEnd"
                        android:text="@string/pasaporte"
                        android:layout_marginEnd="20dp"
                        android:gravity="end"
                        android:layout_marginRight="20dp" />

                    <TextView
                        android:id="@+id/tvCIPasaporte"
                        android:textColor="#000"
                        android:layout_weight="4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textAlignment="viewStart"
                        android:gravity="start" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_weight="7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textAlignment="viewEnd"
                        android:text="@string/correo"
                        android:layout_marginEnd="20dp"
                        android:gravity="end"
                        android:layout_marginRight="20dp" />

                    <TextView
                        android:id="@+id/tvCorreo"
                        android:textColor="#000"
                        android:layout_weight="4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textAlignment="viewStart"
                        android:gravity="start" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_weight="7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textAlignment="viewEnd"
                        android:text="@string/telefono"
                        android:layout_marginEnd="20dp"
                        android:gravity="end"
                        android:layout_marginRight="20dp" />

                    <TextView
                        android:id="@+id/tvTelefono"
                        android:textColor="#000"
                        android:layout_weight="4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textAlignment="viewStart"
                        android:gravity="start"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_weight="7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textAlignment="viewEnd"
                        android:text="@string/direccion"
                        android:layout_marginEnd="20dp"
                        android:gravity="end"
                        android:layout_marginRight="20dp" />

                    <TextView
                        android:id="@+id/tvDireccion"
                        android:textColor="#000"
                        android:layout_weight="4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textAlignment="viewStart"
                        android:gravity="start" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_weight="7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textAlignment="viewEnd"
                        android:text="@string/saldo"
                        android:layout_marginEnd="20dp"
                        android:gravity="end"
                        android:layout_marginRight="20dp" />

                    <TextView
                        android:id="@+id/tvSaldo"
                        android:textColor="#000"
                        android:layout_weight="4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textAlignment="viewStart"
                        android:gravity="start"/>

                </LinearLayout>

                <Button
                    android:id="@+id/btnHabilitar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/habilitar_usuario"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/fondo_verde"/>

                <Button
                    android:id="@+id/btnInhabilitar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/inhabilitar_usuario"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/fondo_rojo"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>